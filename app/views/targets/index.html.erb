<% provide :page_title, 'Targerts' %>
<% provide :menu, currently_at('Products')%>
<% provide :mini_menu, currently_at_prod('Назначение изделий') %>

<article class="a-head">
	<h1>index</h1>
	<hr>
</article>

<div class="content-main">	
	<table class="content-table">
	<caption>
		Все назначения
	</caption>
		<thead>
			<tr>
				<th>id</th>
				<th>Название</th>
				<th>Дата создания</th>
				<th>Дата измененмя</th>		
			</tr>
		</thead>
		<tbody>
			<% @targets.each do |target| %>
				<tr>
					<td><%=target.id %> </td>
					<td><%=target.name %></td>
					<td><%=currect_date(target.created_at) %></td>
					<td><%=currect_date(target.updated_at) %></td>
					<td><%=link_to('Изменить', edit_target_path(target), class: 'table-link-info') %></td>
					<td><%=link_to('Удалить', target_path(target), 
									data: {turbo_method: :delete, turbo_confirm: "Вы уверены что хотите удалить #{target.name}"},
									class: 'table-link-destroy')
					%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>