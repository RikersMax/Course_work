<% provide :page_title, 'All products' %>
<% provide :menu, currently_at('Склад')%>
<% provide :mini_menu, currently_at_storage('') %>


<section class="a-head">
	<strong>Изменить количество изделия на складе</strong>
	<hr>	
</section>

<article class="content-main">
	<section class="form-conteiner text-size-xl">
		<div class="form-session" style="width: 500px;">
		<span class="name-head">Изменить количество</span>
			<%=form_with model: @product, method: :patch, url: "/storages/#{@product.id}", data: {turbo: false} do |f| %>
				<div class="text-form-contend">
					<p>Название - <%=@product.name %></p>
					<p>Индификацинонный номер - <%=@product.ident_number %></p>			
					<p>Дата изменения - <%= currect_date(@product.updated_at)%></p>
				</div>
				<div class="hr-line">
					<hr>
				</div>

				<div class="input-field">
					<p><%=f.label :quantity, 'Количество на складе:' %></p>
					<p><%=f.number_field :quantity %></p>
				</div>
				<div class="form-btn-around">					
						<%=f.submit('Сохранить', class: 'btn-success') %>
						<%=link_to('Назад', storages_path, class: 'btn-info') %>					
				</div>				
			<%end %>
		</div>
	</section>
</article>