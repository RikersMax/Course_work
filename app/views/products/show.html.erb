<% provide :page_title, 'Show products' %>
<% provide :menu, currently_at('Products')%>
<% provide :mini_menu, currently_at_prod('') %>

<article class="a-head">
<h1>show</h1>
<hr>	
</article>

<div class="content-main">			
			<p>Название - <%= @product.name%></p>
			<p>Идентификационный номер - <%= @product.ident_number%></p>
			<p>Назначение - <%= @product.target.name%></p>
			<p>Описание - <%= @product.description%></p>
			<p>Дата создание - <%= currect_date(@product.created_at)%></p>
			<p>Дата изменемя - <%= currect_date(@product.updated_at)%></p>
			<div>
				<p><%=link_to('Изменить', edit_product_path(@product)) %></p>
				<p><%=link_to('Удалить', product_path(@product), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}) %></p>
			</div>		
</div>
