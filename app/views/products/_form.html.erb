<section class="form-conteiner text-size-xl">
	<div class="form-session">
		<span class="name-head"><%= object.persisted? ? 'Изменить изделие' : 'Новое изделие' %></span>
		<%= form_with model: object, data: {turbo: false} do |f| %>
			<div class="input-field">
				<p><%=f.label :name, 'Название:', class: 'text-size-l' %></p>
				<p><%=f.text_field :name %></p>
			</div>

			<div class="input-field">
				<p><%=f.label :ident_number, 'Индификацинонный номер:', class: 'text-size-l' %></p>
				<p><%=f.text_field :ident_number %></p>	
			</div>

			<div class="input-field">
				<p><%=f.label :target_id, 'Назначение:', class: 'text-size-l' %></p>
				<p><%=f.select(:target_id, @targets) %></p>
			</div>

			<div class="input-field">
				<p><%=f.label :description, 'Описание:', class: 'text-size-l' %></p>
				<p><%= f.text_area :description, rows: 6 %></p>	
			</div>	

			<div class="form-btn">		
				<%=f.submit(submit_text(f, if_exists: 'Сохранить', if_not_exists: 'Создать'), class: 'btn-success') %>
			</div>

			<% if object.persisted? %>
			<div class="form-btn">
				<%= link_to('Назад', product_path(object), class: 'btn-info')%>
			</div>
			<% end %>
		<% end %>
	</div>
</section>